<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"

       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring       http://camel.apache.org/schema/spring/camel-spring.xsd">
    <bean id="amqConnectionFactory"
          class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="${amq.protocol}://${amq.host}:${amq.port}"/>
        <property name="userName" value="developer"/>
        <property name="password" value="developer"/>
    </bean>
    <bean id="serviceProcessor" class="ru.gazprom_neft.clientfuseservice.processors.RequestProcessor"/>

    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <route id="amq-request">
            <from uri="netty4-http:http://0.0.0.0:8080{{service.url}}?matchOnUriPrefix=true"/>
            <process ref="serviceProcessor"/>
            <to uri="jms:queue:requests?connectionFactory=#amqConnectionFactory"/>
        </route>
        <route id="amq-response-http">
            <from uri="netty4-http:http://0.0.0.0:8080/api/v1/result?matchOnUriPrefix=true"/>
            <to uri="log:http"/>
            <to uri="direct:aggregate"/>
        </route>
        <route>
            <from uri="jms:queue:responses?connectionFactory=#amqConnectionFactory"/>
            <to uri="log:jms"/>
            <to uri="directAggregator"/>
        </route>
        <route id="directAggregator">
            <from uri="direct:aggregate"/>
            <filter>
                <header>JMSCorrelationID</header>
            </filter>
            <to uri="log:aggregation"/>
        </route>
    </camelContext>
</beans>
